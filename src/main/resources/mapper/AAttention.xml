<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peiwan.dao.XyPersonMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.peiwan.bean.TAttention">
        <id column="aid" property="aid" />
        <result column="pid" property="pid" />
        <result column="z_zhubo" property="zZhubo" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        pid, aid, z_zhubo
    </sql>

    <!--根据用户id删除数据-->
    <update id="delete" parameterType="Integer">
        UPDATE t_person SET person_createtime="无数据", person_logintime="无数据" WHERE pid=#{v}
    </update>

    <!--批量更新-->
    <update id="deleteTags" parameterType="list">
        update t_person
        SET
        person_createtime="无数据"
        WHERE
           pid IN
        <foreach collection="list" item="pid" open="(" close=")" separator=",">
          #{pid}
        </foreach>
    </update>
</mapper>
