    <!-- 动态查询 -->
    <select id="getCondition" parameterType="map" resultType="map">
        SELECT
        p.pid,p.person_nickname,p.person_sex,p.person_age,p.person_adress,p.person_coverphoto,g.gid,g.g_name,g.g_duanwei
        FROM p_person p
        LEFT JOIN g_service g ON p.pid=g.pid
        WHERE p.z_zhubo=1
        <if test="map.gid != null and map.gid != ''">
            and g.gid = #{map.gid}
        </if>
        <if test="map.gDw != null and map.gDw != ''">
            and g.g_duanwei like concat("%",#{map.gDw},"%")
        </if>
        <if test="map.psex != null and map.psex != ''">
            and p.person_sex = #{map.psex}
        </if>
    </select>

</mapper>
